<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foo">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="783dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        >

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/ic_logo_01"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_01"
                tools:layout_conversion_absoluteHeight="125dp"
                tools:layout_conversion_absoluteWidth="125dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/ic_logo_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_02"
                tools:layout_conversion_absoluteHeight="125dp"
                tools:layout_conversion_absoluteWidth="125dp"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="1dp"
                android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/ic_logo_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="2"
                app:layout_row="0"
                app:srcCompat="@drawable/ic_logo_03"
                tools:layout_conversion_absoluteHeight="125dp"
                tools:layout_conversion_absoluteWidth="125dp"
                tools:layout_editor_absoluteX="251dp"
                tools:layout_editor_absoluteY="1dp"
                android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/ic_logo_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/ic_logo_04"
                tools:layout_conversion_absoluteHeight="125dp"
                tools:layout_conversion_absoluteWidth="125dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="126dp"
                android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/ic_logo_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/ic_logo_05"
                tools:layout_conversion_absoluteHeight="125dp"
                tools:layout_conversion_absoluteWidth="125dp"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="126dp"
                android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/ic_logo_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="2"
                app:layout_row="1"
                app:srcCompat="@drawable/ic_logo_00"
                tools:layout_conversion_absoluteHeight="125dp"
                tools:layout_conversion_absoluteWidth="125dp"
                tools:layout_editor_absoluteX="251dp"
                tools:layout_editor_absoluteY="126dp"
                android:layout_margin="2dp" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load">

        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>